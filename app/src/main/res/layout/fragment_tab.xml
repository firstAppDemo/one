<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="姓名:"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            tools:text="姓名:"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textStyle="normal|bold"
            android:id="@+id/textView5" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userinfo_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="年龄:"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="年龄:"
            android:textSize="22sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userinfo_age"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="爱好:"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView7"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="爱好:"
            android:textSize="22sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userinfo_hobby"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" />
    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="性别:"
            android:layout_width="194dp"
            android:layout_height="wrap_content"
            android:id="@+id/textView8"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="性别:"
            android:textSize="22sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_userinfo_sex"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="203dp"
        android:weightSum="1">

        <TextView
            android:text="背景墙:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView9"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="背景墙:"
            android:textSize="22sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:srcCompat="@android:drawable/sym_def_app_icon"
            android:id="@+id/im_userinfo_img" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="个性签名:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView10"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="个性签名:"
            android:textSize="22sp"
            android:textStyle="normal|bold"
            android:textAllCaps="true"
            android:textAlignment="center" />

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_userinfo_remark"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="无可奈何花落去，似曾相识燕归来" />
    </LinearLayout>

</LinearLayout>