<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="30dp"
        android:weightSum="1">

        <TextView
            android:text="姓名:"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_reg_username"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            android:hint="请输入1-10个字符"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="14dp"
        android:weightSum="1">

        <TextView
            android:text="密码:"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/et_reg_psd"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            android:hint="请输入1-10个字符"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="14dp"
        android:weightSum="1">

        <TextView
            android:text="性别:"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp">

            <RadioButton
                android:text="男"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_man"
                android:layout_weight="1"/>

            <RadioButton
                android:text="女"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_woman"
                android:layout_weight="1"/>

            <RadioButton
                android:text="人妖"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_yao"
                android:layout_weight="1"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="14dp"
        android:weightSum="1">

        <TextView
            android:text="兴趣爱好:"
            android:layout_height="wrap_content"
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="16dp"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <CheckBox
                android:text="象棋"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_chess"
                android:layout_weight="1"/>

            <CheckBox
                android:text="爬山"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_mountain"
                />

            <CheckBox
                android:text="画画"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_painting"
                android:layout_weight="1"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <CheckBox
                android:text="看书"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_reading"
                android:layout_weight="1"/>

            <CheckBox
                android:text="唱歌"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_singing"
                android:layout_weight="1"/>

            <CheckBox
                android:text="跑步"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_running"
                android:layout_weight="1"/>
        </RadioGroup>

        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <CheckBox
                android:text="打篮球"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_play"
                android:layout_weight="1"/>

            <CheckBox
                android:text="看电影"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_look"
                android:layout_weight="1"/>

            <CheckBox
                android:text="玩游戏"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/ck_game"
                android:layout_weight="1"/>
        </RadioGroup>


    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:weightSum="1">

        <Button
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reg_yes"
            android:layout_weight="0.67"
            android:background="@drawable/shape_corner"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></Button>

        <Button
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_reg_no"
            android:background="@drawable/shape_corner_red"
            android:layout_marginRight="36dp"
            android:layout_marginEnd="36dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            >

        </Button>


    </RelativeLayout>

</LinearLayout>