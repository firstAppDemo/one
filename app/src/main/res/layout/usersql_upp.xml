<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:text="姓名:"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_userupp_username"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            android:hint="请输入1-10个字符"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            android:text="电话:"
            android:layout_height="wrap_content"
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="phone"
            android:id="@+id/et_userupp_phone"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            android:text="部门："
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp">

            <RadioButton
                android:text="财务部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_cai"
                android:layout_weight="1"/>

            <RadioButton
                android:text="保卫部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_bao"
                android:layout_weight="1"/>

            <RadioButton
                android:text="人事部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_ren"
                android:layout_weight="1"/>
            <RadioButton
                android:text="信息部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_xin"
                android:layout_weight="1"/>
            <RadioButton
                android:text="市场部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_shi"
                android:layout_weight="1"/>
            <RadioButton
                android:text="销售部"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_xiao"
                android:layout_weight="1"/>
        </RadioGroup>


    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="5dp"
        android:weightSum="1">

        <TextView
            android:text="科室："
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_marginTop="20dp">

            <RadioButton
                android:text="一室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_1"
                android:layout_weight="1"/>

            <RadioButton
                android:text="二室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_2"
                android:layout_weight="1"/>

            <RadioButton
                android:text="三室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_3"
                android:layout_weight="1"/>
            <RadioButton
                android:text="纪检室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_4"
                android:layout_weight="1"/>
            <RadioButton
                android:text="综合科"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_5"
                android:layout_weight="1"/>
            <RadioButton
                android:text="后勤室"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/rad_6"
                android:layout_weight="1"/>
        </RadioGroup>


    </LinearLayout>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_marginTop="10dp"
        android:weightSum="1">

        <TextView
            android:text="备注："
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="sans-serif"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_marginLeft="26dp"/>

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/et_userupp_reason"
            android:layout_weight="1"
            android:layout_marginTop="17dp"
            android:layout_marginLeft="12dp"
            android:digits="1234567890qwertyuiopasdfghjklzxcvbnmQWERTYUIOPASDFGHJKLZXCVBNM"
            android:elevation="1dp"/>
    </LinearLayout>

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="14dp"
        android:weightSum="1">

        <Button
            android:text="确定"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_userupp_yes"
            android:layout_weight="0.67"
            android:background="@drawable/shape_corner"
            android:layout_marginLeft="41dp"
            android:layout_marginStart="41dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"></Button>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/tv_userupp_id"
            />

        <Button
            android:text="取消"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/btn_userupp_no"
            android:background="@drawable/shape_corner_red"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/tv_userupp_id"
            android:layout_toEndOf="@+id/tv_userupp_id"
            android:layout_marginLeft="36dp"
            android:layout_marginStart="36dp">

        </Button>


    </RelativeLayout>

</LinearLayout>